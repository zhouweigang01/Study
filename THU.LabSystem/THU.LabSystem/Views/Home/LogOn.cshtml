@model THU.LabSystem.Models.LogOnModel
@{
    ViewBag.Title = "用户登录";
    Layout = "~/Views/Shared/_LayoutC.cshtml";
}
@section Head{
    <link href="/Content/themes/default/easyui.css" rel="stylesheet" type="text/css" />
    <link href="/Content/themes/icon.css" rel="stylesheet" type="text/css" />
    <link href="/Content/themes/public.css" rel="stylesheet" />
    <link href="/Content/login/login.css" rel="stylesheet" type="text/css" />
    <script src="/Scripts/jquery.easyui.min.js" type="text/javascript"></script>
    <style type="text/css">
        .combo
        {
            border: 0;
        }
        
        .combo-text
        {
            border: 1px solid #D8D8D8;
            border-radius: 3px;
            padding-left: 40px;
            height: 32px;
            line-height: 32px;
            background: white url(/Content/login/img.png) no-repeat 0px -50px;
            font-size: 18px;
            font-weight: bold;
        }
        .combobox-item
        {
            height: 22px;
            font-size: 16px;
            cursor: pointer;
        }
        
        .combo-arrow
        {
            background-position-y: 10px;
            width: 18px;
            height: 32px;
        }
    </style>
}
<div class="login-head">
    <a class="logo" href="javascript:void(0)">
        <img src="/Content/portal/logo.png" width="150" height="45" style="border: 0;" /></a><span
            style="margin: 20px; font-size: large; font-weight: bold;">土木工程系实验室管理系统 </span>
</div>
@using (Html.BeginForm("LogOn", "Home", new RouteValueDictionary() { { "type", ViewBag.Type } }))
{
    @Html.ValidationSummary(true)
    <div class="login-content">
        <div class="loginbox-title">
            <h3>
                登录
            </h3>
        </div>
        <div class="login-error" style="display: none;">
        </div>
        <div class="row">
            <label class="field">
                用户名
            </label>
            @Html.TextBoxFor(m => m.Code, new { @class = "input-text-user input-click" })
            @Html.ValidationMessageFor(m => m.Code, "", new { @class = "input-text-val" })
        </div>
        <div class="row">
            <label class="field">
                密&nbsp;码
            </label>
            @Html.PasswordFor(m => m.Password, new { @class = "input-text-password input-click" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "input-text-val" })
        </div>
        @*     <div class="row">
            <label class="field">
                组&nbsp;织
            </label>
            <select id="Org" name="Org" panelwidth="280" panelheight="150" class="easyui-combobox"
                style="width: 240px;">
                @for (int i = 0; i < ViewBag.OrgList.Count; i++)
                {
                    THU.LabSystemBE.Deploy.OrgDTO orgDTO = ViewBag.OrgList[i];
                    if (i == 0)
                    {
                    <option value="@orgDTO.ID" selected=selected>@(orgDTO.Name)</option>
                    }
                    else
                    {
                    <option value="@orgDTO.ID" >@(orgDTO.Name)</option>
                    }
                }
            </select>
        </div>*@
        <div class="row btnArea">
            <input type="submit" class="login-btn" value="登陆" />
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMsg))
        {
            <div class="row">
                <label class="field" style="display: block; color: #f00; font-weight: bold; width: 100%;
                    text-align: left;">
                    @ViewBag.ErrorMsg
                </label>
            </div>
        }
    </div>
}

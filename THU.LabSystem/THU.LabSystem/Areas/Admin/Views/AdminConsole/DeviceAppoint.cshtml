@{
    ViewBag.Title = "设备预约";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{
    <meta charset='utf-8' />
    <link href='/calendar/fullcalendar.css' rel='stylesheet' />
    <link href='/calendar/fullcalendar.print.css' rel='stylesheet' media='print' />
    <script src="/qtip/jquery.qtip.min.js" type="text/javascript"></script>
    <link href="/qtip/jquery.qtip.min.css" rel="stylesheet" type="text/css" />
    <script src='/calendar/lib/moment.min.js'></script>
    <script src='/calendar/fullcalendar.js'></script>
    <script src='/calendar/lang-all.js'></script>
    <script src="/Areas/Script/Admin/AdminConsole/DeviceAppoint.js" type="text/javascript"></script>
    <style type type="text/css">
        #calendar
        {
            width: 60%;
            margin: 120px auto 10px;
            min-width: 600px;
        }
        .datagrid-toolbar-label
        {
            margin-left: 10px;
            margin-right: 10px;
        }
        .ct-sort
        {
            color: #00a;
            font-weight: bold;
            margin-left: 15px;
        }
        .ct-detail
        {
            font-weight: bold;
            color: #a00;
            font-size: 14px;
        }
        .qtip-content
        {
            margin: 0 0 5px 0;
        }
        .appoint-bar
        {
            padding: 5px;
            border-bottom: 1px solid #aaa;
            background: #fff;
            z-index: 1000;
            position: absolute;
            top: 30px;
            left: 3px;
            right: 20px;
        }
        
        
        .lyz_tab_left
        {
            float: left;
            width: 110px;
            height: 4px;
            position: relative;
        }
        .pro_con UL
        {
            margin: 0px;
            padding: 0px;
            width: 100px;
            list-style-type: none;
            position: absolute;
        }
        .pro_con UL LI
        {
            padding-right: 30px;
            display: inline;
            font-size: 12px;
            float: left;
            width: 80px;
            cursor: pointer;
            color: #000;
            line-height: 20px;
            height: 20px;
            text-align: right;
        }
        .pro_con UL LI.hover
        {
            padding-right: 30px;
            display: inline;
            font-weight: bold;
            font-size: 12px;
            background: #fff;
            border: 1px solid #aaa;
            border-right: 0;
            float: left;
            width: 80px;
            cursor: pointer;
            color: #3c3c3c;
            line-height: 20px;
            height: 20px;
            text-align: right;
        }
        .lyz_tab_right
        {
            display: inline;
            padding: 10px 0;
            background: #fff;
            border: 1px solid #aaa;
            float: left;
            width: 450px;
            height: 20px;
        }
    </style>
}
<div data-options="region:'center'">
    <div id="apppintPanel" class="easyui-panel" title="设备预定" data-options="fit:true">
        <div class="appoint-bar">
            <div class="tab_box">
                <div class="lyz_tab_left">
                    <div class="pro_con">
                        <ul>
                            <li class="hover" target="con_one_1">查询房间预约</li>
                            <li target="con_one_2">自由查询预约</li>
                        </ul>
                    </div>
                </div>
                <div class="lyz_tab_right">
                    <div id="con_one_1">
                        <span class="datagrid-toolbar-label">房间号</span><select id="txtSelectHouse" class="easyui-combobox"
                            style="width: 120px"></select>
                        <span class="datagrid-toolbar-label">设备号</span><select id="txtSelectDevice" class="easyui-combogrid"
                            style="width: 160px"></select>
                    </div>
                    <div id="con_one_2" style="display: none;">
                        <span class="datagrid-toolbar-label">设备查找</span><select id="txtSearchDevice" style="width: 200px"></select>
                        <span style="color: #f00; font-size: 8px;">录入设备编号、名称或房间号</span>
                    </div>
                </div>
                <div class="head-right" style="float: left; padding: 12px 0 0 10px;">
                    <span class="ct-sort">设备号：<span id="txtSN" class="ct-detail"></span> </span><span
                        class="ct-sort">名称：<span id="txtName" class="ct-detail"></span> </span><span class="ct-sort">
                            类型：<span id="txtType" class="ct-detail"></span> </span><span class="ct-sort">状态：<span
                                id="txtStatus" class="ct-detail"></span> </span><span class="ct-sort">房间号：<span id="txtHouse"
                                    class="ct-detail"></span> </span>
                </div>
                <div class="clear">
                </div>
            </div>
            <div style="clear: both">
            </div>
        </div>
        <div id='calendar'>
        </div>
    </div>
</div>
